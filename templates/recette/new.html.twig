{% extends './base.html.twig' %}

{% block title %}New Recette{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="text-center">Ajouter une recette</h1>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.descriptions) }}
                    {{ form_widget(form.descriptions) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.images) }}
                    {{ form_widget(form.images) }}
                </div>
                <div class="form-group user">
                    {{ form_label(form.users) }}
                    {{ form_widget(form.users,  { 'mapped': false }) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.ingredients) }}
                    {{ form_widget(form.ingredients) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.creationTime) }}
                    {{ form_widget(form.creationTime) }}
                </div>
                <div class="form-group">
                    <div {{ stimulus_controller('form-collection') }}
                            data-form-collection-index-value="{{ form.recipeStep|length > 0 ? form.recipeStep|last.vars.name + 1 : 0 }}"
                            data-form-collection-prototype-value="{{ form_widget(form.recipeStep.vars.prototype)|e('html_attr') }}"
                    >
                        <ul {{ stimulus_target('form-collection', 'collectionContainer') }}></ul>
                        <button type="button" {{ stimulus_action('form-collection', 'addCollectionElement') }}>Add a tag</button>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Ajouter une recette</button>


                <a href="{{ path('app_home_page_index') }}">back to list</a>
                {{ form_end(form) }}
            </div>


        </div>
    </div>

    <style>
        .user{
            display: none;
        }
    </style>

    {% endblock %}
